extends ../layout/index

block content
  div.py-5
    h1.text-4xl.my-5.font-extrabold.text-center Real
      span.font-normal Estate
    h2.text-center.text-2xl.font-extrabold=page

    div.mt-8.mx-auto.max-w-md
      .bg-white.py-8.px-4.shadow
        form.space-y-5
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email
            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Email" type="text" name="email")
          
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password
            input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Password" type="password" name="password")

          div.flex.items-center.justify-between 
            a.text-gray-500.text-xs(href="/auth/register") Don't have an account? Register
            a.text-gray-500.text-xs(href="/auth/forgot-password") Forgot my password

          input(class="w-full bg-indigo-400 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Login")