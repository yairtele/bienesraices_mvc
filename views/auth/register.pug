extends ../layout/index

block content
  div.py-5
    h1.text-4xl.my-5.font-extrabold.text-center Real
      span.font-normal Estate
    h2.text-center.text-2xl.font-extrabold=page

    if errors
      div(class = "max-w-md mx-auto my-10")
        each error in errors
          p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg

    div.mt-8.mx-auto.max-w-md
      .bg-white.py-8.px-4.shadow
        form.space-y-5(method="POST" action="/auth/register")
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="firstName") First Name
            input#firstName.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="First name" type="text" name="firstName" value= user? user.firstName:'')
          
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="lastName") Last Name
            input#lastName.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Last name" type="text" name="lastName" value= user? user.lastName:'')
          
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email
            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Email" type="text" name="email" value= user? user.email:'')
          
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password
            input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Password" type="password" name="password")
          
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repeatedPassword") Repeat Password
            input#repeatedPassword.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repeat Password" type="password" name="repeatedPassword")

          div.flex.items-center.justify-between 
            a.text-gray-500.text-xs(href="/auth/login") Have you got an account? Login
            a.text-gray-500.text-xs(href="/auth/forgot-password") Forgot my password

          input(class="w-full bg-indigo-400 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Create account")